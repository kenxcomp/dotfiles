{{- $theme := .theme.name -}}
{{- $themeData := include (printf "themes/%s.yaml" $theme) | fromYaml -}}
{{- $colors := $themeData.colors -}}
# Theme: {{ $theme }}
# Auto-generated by chezmoi - DO NOT EDIT MANUALLY

[manager]
cwd = { fg = "{{ $colors.cyan }}" }

# Hovered
hovered = { fg = "{{ $colors.bg }}", bg = "{{ $colors.blue }}" }
preview_hovered = { underline = true }

# Find
find_keyword = { fg = "{{ $colors.yellow }}", italic = true }
find_position = { fg = "{{ $colors.magenta }}", bg = "reset", italic = true }

# Marker
marker_copied = { fg = "{{ $colors.green }}", bg = "{{ $colors.green }}" }
marker_cut = { fg = "{{ $colors.red }}", bg = "{{ $colors.red }}" }
marker_marked = { fg = "{{ $colors.cyan }}", bg = "{{ $colors.cyan }}" }
marker_selected = { fg = "{{ $colors.yellow }}", bg = "{{ $colors.yellow }}" }

# Tab
tab_active = { fg = "{{ $colors.bg }}", bg = "{{ $colors.blue }}" }
tab_inactive = { fg = "{{ $colors.fg }}", bg = "{{ $colors.bg_alt }}" }
tab_width = 1

# Count
count_copied = { fg = "{{ $colors.bg }}", bg = "{{ $colors.green }}" }
count_cut = { fg = "{{ $colors.bg }}", bg = "{{ $colors.red }}" }
count_selected = { fg = "{{ $colors.bg }}", bg = "{{ $colors.yellow }}" }

# Border
border_symbol = "|"
border_style = { fg = "{{ $colors.bright_black }}" }

[status]
separator_open = ""
separator_close = ""
separator_style = { fg = "{{ $colors.bg_alt }}", bg = "{{ $colors.bg_alt }}" }

# Mode
mode_normal = { fg = "{{ $colors.bg }}", bg = "{{ $colors.blue }}", bold = true }
mode_select = { fg = "{{ $colors.bg }}", bg = "{{ $colors.green }}", bold = true }
mode_unset = { fg = "{{ $colors.bg }}", bg = "{{ $colors.magenta }}", bold = true }

# Progress
progress_label = { fg = "{{ $colors.fg }}", bold = true }
progress_normal = { fg = "{{ $colors.blue }}", bg = "{{ $colors.bg_alt }}" }
progress_error = { fg = "{{ $colors.red }}", bg = "{{ $colors.bg_alt }}" }

# Permissions
permissions_t = { fg = "{{ $colors.blue }}" }
permissions_r = { fg = "{{ $colors.yellow }}" }
permissions_w = { fg = "{{ $colors.red }}" }
permissions_x = { fg = "{{ $colors.green }}" }
permissions_s = { fg = "{{ $colors.bright_black }}" }

[input]
border = { fg = "{{ $colors.blue }}" }
title = {}
value = {}
selected = { reversed = true }

[select]
border = { fg = "{{ $colors.blue }}" }
active = { fg = "{{ $colors.magenta }}" }
inactive = {}

[tasks]
border = { fg = "{{ $colors.blue }}" }
title = {}
hovered = { underline = true }

[which]
mask = { bg = "{{ $colors.bg_dim }}" }
cand = { fg = "{{ $colors.cyan }}" }
rest = { fg = "{{ $colors.bright_black }}" }
desc = { fg = "{{ $colors.magenta }}" }
separator = "  "
separator_style = { fg = "{{ $colors.bright_black }}" }

[help]
on = { fg = "{{ $colors.magenta }}" }
run = { fg = "{{ $colors.cyan }}" }
desc = { fg = "{{ $colors.fg }}" }
hovered = { bg = "{{ $colors.bg_alt }}", bold = true }
footer = { fg = "{{ $colors.fg }}", bg = "{{ $colors.bg_alt }}" }

[filetype]
rules = [
    # Images
    { mime = "image/*", fg = "{{ $colors.cyan }}" },

    # Videos
    { mime = "video/*", fg = "{{ $colors.yellow }}" },

    # Audio
    { mime = "audio/*", fg = "{{ $colors.yellow }}" },

    # Archives
    { mime = "application/zip", fg = "{{ $colors.magenta }}" },
    { mime = "application/gzip", fg = "{{ $colors.magenta }}" },
    { mime = "application/x-tar", fg = "{{ $colors.magenta }}" },
    { mime = "application/x-7z-compressed", fg = "{{ $colors.magenta }}" },
    { mime = "application/x-rar", fg = "{{ $colors.magenta }}" },

    # Documents
    { mime = "application/pdf", fg = "{{ $colors.red }}" },

    # Fallback
    { name = "*", fg = "{{ $colors.fg }}" },
    { name = "*/", fg = "{{ $colors.blue }}" }
]
