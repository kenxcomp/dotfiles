{{- $theme := .theme.name -}}
{{- $themeData := include (printf "themes/%s.yaml" $theme) | fromYaml -}}
{{- $colors := $themeData.colors -}}
# Theme: {{ $theme }}
# Auto-generated by chezmoi - DO NOT EDIT MANUALLY
# Palette:
# bg {{ $colors.bg }} | fg {{ $colors.fg }} | red {{ $colors.red }} | green {{ $colors.green }} | yellow {{ $colors.yellow }}
# blue {{ $colors.blue }} | purple {{ $colors.purple }} | aqua {{ $colors.aqua }} | gray {{ $colors.gray }}

# ---- Prompt symbol ----
set -g pure_color_prompt {{ $colors.blue }} # blue: input focus
set -g pure_color_prompt_on_error {{ $colors.red }} # red: error highlight

# ---- Current directory ----
set -g pure_color_path {{ $colors.cyan }} # cyan: path
set -g pure_color_path_basename {{ $colors.green }} # green: last dir segment

# ---- Command status / execution time ----
set -g pure_color_command_duration {{ $colors.yellow }} # yellow: duration
set -g pure_color_success {{ $colors.green }} # green: success
set -g pure_color_error {{ $colors.red }} # red: failure

# ---- Git ----
set -g pure_color_git_branch {{ $colors.magenta }} # magenta: branch name
set -g pure_color_git_dirty {{ $colors.yellow }} # yellow: working tree dirty
set -g pure_color_git_stash {{ $colors.red }} # red: stash highlight
set -g pure_color_git_unpulled_commits {{ $colors.blue }} # blue: behind
set -g pure_color_git_unpushed_commits {{ $colors.green }} # green: ahead

# ---- Secondary / subtle ----
set -g pure_color_jobs {{ $colors.bright_black }} # gray: background jobs
set -g pure_color_host {{ $colors.bright_black }} # gray: host/SSH
set -g pure_color_user {{ $colors.bright_black }} # gray: username
